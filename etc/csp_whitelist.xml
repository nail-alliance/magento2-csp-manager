<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <!-- Allow external JavaScript sources -->
        <policy id="script-src">
            <values>
                <value id="paypal-scripts" type="host">https://www.paypal.com</value>
                <value id="google-analytics-scripts" type="host">https://www.google-analytics.com</value>
                <value id="google-pay-scripts" type="host">https://pay.google.com</value>
                <value id="google-scripts" type="host">https://google.com</value>
                <value id="klaviyo-scripts" type="host">https://static.klaviyo.com</value>

                <!-- Added from original file -->
                <value id="cloudflare" type="host">https://*.cloudflare.com</value>
                <value id="amex" type="host">https://*.americanexpress.com</value>
                <value id="google-tag-analytics" type="host">https://*.googletagmanager.com</value>
                <value id="gstatic" type="host">https://*.gstatic.com</value>
                <value id="facebook_net" type="host">https://*.facebook.net</value>
                <value id="facebook_com" type="host">https://*.facebook.com</value>
                <value id="accessibe_sub" type="host">https://*.acsbapp.com</value>
                <value id="accessibe" type="host">https://acsbapp.com</value>
                <value id="youtube" type="host">https://*.youtube.com</value>
                <value id="nailallianceuk" type="host">https://*.nailalliance.co.uk</value>
            </values>
        </policy>

        <!-- Allow external CSS sources -->
        <policy id="style-src">
            <values>
                <value id="google-css" type="host">https://fonts.googleapis.com</value>
                <value id="klaviyo-css" type="host">https://static.klaviyo.com</value>
                <value id="klaviyo-tracking-src" type="host">https://static.tracking.klaviyo.com</value>
                <value id="klaviyo-tracking-src-2" type="host">https://static-tracking.klaviyo.com</value>
                <!-- Added from original file -->
                <value id="cloudflare" type="host">https://*.cloudflare.com</value>
                <value id="typekit" type="host">https://*.typekit.net</value>
                <value id="gstatic" type="host">https://*.gstatic.com</value>
                <value id="fonts_net" type="host">https://*.fonts.net</value>
                <value id="fonts_googleapis_com" type="host">https://fonts.googleapis.com</value>
            </values>
        </policy>
        
        <!-- Allow external font sources -->
        <policy id="font-src">
            <values>
                <value id="google-fonts" type="host">https://fonts.googleapis.com</value>
                <value id="klaviyo-fonts" type="host">https://static.klaviyo.com</value>

                <!-- Added from original file -->
                <value id="cloudflare" type="host">https://*.cloudflare.com</value>
                <value id="typekit" type="host">https://*.typekit.net</value>
                <value id="trustedshops" type="host">https://*.trustedshops.com</value>
                <value id="gstatic" type="host">https://*.gstatic.com</value>
                <value id="fonts_net" type="host">https://*.fonts.net</value>
            </values>
        </policy>

        <!-- Allow external image sources -->
        <policy id="img-src">
            <values>
                <value id="paypal-images" type="host">https://www.paypal.com</value>
                <value id="cloudfront-img" type="host">https://*.cloudfront.net</value>

                <!-- Added from original file -->
                <value id="cloudflare" type="host">https://*.fbcdn.net</value>
                <value id="nailallianceuk-img" type="host">https://*.nailalliance.co.uk</value>
                <value id="vimeocdn" type="host">https://*.vimeocdn.com</value>
                <value id="youtube-img" type="host">https://s.ytimg.com</value>
                <value id="instagram-img" type="host">https://*.cdninstagram.com</value>
            </values>
        </policy>
        
        <!-- Allow external frame sources -->
        <policy id="frame-src">
            <values>
                <value id="visa-partner-arcot" type="host">https://*.arcot.com</value>
                <value id="google-pay-frame" type="host">https://pay.google.com</value>
                <value id="monzo-frame" type="host">https://*.monzo.com</value>
                <value id="amex-frame" type="host">https://*.americanexpress.com</value>
                <!-- Added from original file -->
                <value id="youtube" type="host">https://*.youtube.com</value>
                <value id="instagram" type="host">https://*.instagram.com</value>
                <value id="google" type="host">https://*.google.com</value>
                <value id="secure-suite-frame" type="host">https://www.securesuite.co.uk</value>
                <value id="apata-frame" type="host">https://*.apata.io</value>
                <value id="rsa3ds-frame" type="host">https://rsa3dsauth.co.uk</value>
                <value id="rsa3ds-frame-wildcard" type="host">https://*.rsa3dsauth.co.uk</value>
                <value id="geoisser-frame-action" type="host">https://*.cardinalcommerce.com</value>
                <value id="lloydsbankinggroup" type="host">https://*.lloydsbankinggroup.com</value>
            </values>
        </policy>
        <!-- Allow external form sources -->
        <policy id="form-action">
            <values>
                <value id="visa-partner-arcot-form" type="host">https://*.arcot.com</value>
                <value id="amex-form" type="host">https://*.americanexpress.com</value>
                <value id="apata-form" type="host">https://*.apata.io</value>
                <value id="secure-suite-form" type="host">https://securesuite.co.uk</value>
                <value id="secure-suite-wildcard-form" type="host">https://*.securesuite.co.uk</value>
                <value id="starling-bank-form" type="host">https://3dsecure.starlingbank.com</value>
                <value id="rsa-3ds-form" type="host">https://www.rsa3dsauth.co.uk</value>
                <value id="monzo-form" type="host">https://*.monzo.com</value>
                <value id="credit-mutel-form" type="host">https://*.creditmutuel.fr</value>
                <value id="geoisser-form-action" type="host">https://*.cardinalcommerce.com</value>
            </values>
        </policy>
        <!-- Allow external connection sources (e.g., API endpoints) -->
        <policy id="connect-src">
            <values>
                <value id="paypal-api" type="host">https://api.paypal.com</value>
                <value id="google-analytics-region1" type="host">https://region1.google-analytics.com</value>
                <value id="google-connect" type="host">https://google.com</value>
                <value id="google-pay-connect" type="host">https://pay.google.com</value>
                <value id="google-pay-alt-connect" type="host">https://google.com/pay</value>
                <value id="cardinal-commerce" type="host">https://geoissuer.cardinalcommerce.com</value>
                <value id="samsung-pay" type="host">https://*.samsung.com</value>
                <!-- Added from original file -->
                <value id="facebook_com" type="host">https://*.facebook.com</value>
                <value id="instagram" type="host">https://*.instagram.com</value>
                <value id="google" type="host">https://*.google.com</value>
                <value id="google-analytics" type="host">https://www.google-analytics.com</value>
                <value id="accessibe" type="host">https://*.acsbapp.com</value>
                <value id="arcot" type="host">https://*.arcot.com</value>
                <value id="datadome-connect" type="host">https://api-js.datadome.co</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>